@model IEnumerable<EmployeeManagement.Models.CustomerResponseModel>

@{
    ViewData["Title"] = "Get Customers Page";
}
<style>
    .btn:focus, .btn:active {
        outline: none !important;
        box-shadow: none;
    }
</style>
<h1>Customers page view</h1>
<a class="btn btn-primary" asp-controller="Customer" asp-action="Create">Create</a>
<br />
<br />
<table class="table">
    <thead class="table-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Postal Code</th>
            <th scope="col">City</th>
            <th scope="col">Location</th>
            <th scope="col">Email</th>
            <th scope="col">Phone</th>
            <th scope="col">Mobile</th>
            <th scope="col">Image</th>
            <th scope="col">Comment</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @{
            if (Model == null)
            {
                <tr>
                    <td colspan="11">
                        <h5 class="text-center">There is no data for display</h5>
                    </td>
                </tr>
            }
            else
                foreach (var customer in Model)
                {
                    <tr>
                        <th scope="row">@customer.Id</th>
                        <td>@customer.Name</td>
                        <td>@customer.CustomerPostalCode</td>
                        <td>@customer.City</td>
                        <td>@customer.Location</td>
                        <td>@customer.Email</td>
                        <td>@customer.Phone</td>
                        <td>@customer.Mobile</td>
                        @{
                            if (@customer.ImagePath == "")
                            {
                                <td><img src="~/uploads/th.jpg" width="100" height="50" /></td>

                            }
                            else
                            {

                                <td><img src="@_configuration["ImageBaseUrl"]@customer.ImagePath" width="100" height="50" /></td>
                            }

                            }

                        <td>@customer.Comment</td>
                        <td>
                            <a class="btn btn-outline-primary border-0" asp-action="Edit" asp-route-id="@customer.Id"><i class="fa-solid fa-pencil"></i></a>
                            <a class="btn btn-outline-danger border-0" asp-action="Delete" asp-route-id="@customer.Id"><i class="fa-solid fa-trash"></i></a>
                        </td>
                    </tr>
                }
        }

    </tbody>
</table>